@model EjemploMVC.Models.Promedio

@{
    ViewBag.Title = "index";
}

<h2>Promedio</h2>


@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

    <div class="form-group">

        <label> Nota 1 :</label>
        @Html.TextBoxFor(Model => Model.nota1, new { @class = "form-control" })

        <label> Nota 2: </label>
        @Html.TextBoxFor(Model => Model.nota2, new { @class = "form-control" })

        <label> Nota 3: </label>
        @Html.TextBoxFor(Model => Model.nota3, new { @class = "form-control" })

    </div>

    <div class="form-group">
        <input type="submit" value="Calcular Promedio" class="btn btn-success"/>
    </div>

}

<br>
<br>
    @if (ViewBag.mensaje != null)
    {

        <div class="alert alert-@ViewBag.color">
            @ViewBag.mensaje

        </div>

    }
